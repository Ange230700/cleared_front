{
  "name": "cleared_front",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "test": "vitest",
    "clean": "rm -rf node_modules package-lock.json dist",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --cache --fix --ext .js,.mjs,.cjs,.ts,.mts,.cts,.vue .",
    "prepare": "husky"
  },
  "dependencies": {
    "vue": "^3.5.17",
    "@primeuix/themes": "^1.0.3",
    "@primevue/forms": "^4.3.3",
    "@tailwindcss/vite": "^4.1.3",
    "@vue/test-utils": "^2.4.6",
    "axios": "^1.8.4",
    "flush-promises": "^1.0.2",
    "jsdom": "^26.0.0",
    "pinia": "^3.0.2",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.3",
    "tailwindcss": "^4.1.3",
    "tailwindcss-primeui": "^0.6.1",
    "valibot": "^1.0.0",
    "vue-router": "^4.5.0",
    "vuex": "^4.0.2",
    "yup": "^1.6.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.0",
    "vue-tsc": "^2.2.10",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "vitest": "^3.1.1",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,mts,cts,vue}": "npm run lint",
    "*.{json,jsonc,json5,css}": "prettier --write --ignore-unknown"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
